@model IEnumerable<Stack_Undertow.Models.Answer>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Answers</h1>
                    <hr class="small">
                    <span class="subheading">List of Answers</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Add an Answer", "Create", "Answer", null, new { @class = "btn btn-primary" })
        <hr />
    }
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var answer in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">@answer.Body</div>
                        <div class="panel-footer">@answer.Score</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>