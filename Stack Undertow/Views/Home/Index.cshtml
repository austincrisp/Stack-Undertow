@model IEnumerable<Stack_Undertow.Models.Question>
@using Microsoft.AspNet.Identity

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Stack Undertow</h1>
                    <hr class="small">
                    <span class="subheading">A Stack Overflow Replica</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var question in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@question.Title</h3>
                        </div>
                        <div class="panel-body">@question.Body</div>
                        <div class="panel-footer">@Html.ActionLink("View Answers", "Index", "Answer", null, new { id = question.Id })</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>