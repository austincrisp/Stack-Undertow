@model IEnumerable<Stack_Undertow.Models.Question>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(/img/home-bg.jpg)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Questions</h1>
                    <hr class="small">
                    <span class="subheading">List of User Questions</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    @Html.ActionLink("Ask a Question", "Create", "Question", new { @class = "btn btn-primary" })
    <hr />
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                @foreach (var question in Model)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@question.Title</h3>
                        </div>
                        <div class="panel-body">@question.Body</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>